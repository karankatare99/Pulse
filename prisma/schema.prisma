
generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  spaces Space[]
}

model Space {
  id String @id @default(uuid())
  userId String
  name String @unique
  songs Song[]
  user User @relation(fields: [userId], references: [id])
}

model Song {
  id String @id
  currentTrack Boolean @default(false)
  spaceId String
  title String
  channel String
  thumbnail String
  url String
  votes Int
  space Space @relation(fields: [spaceId], references: [id])
}